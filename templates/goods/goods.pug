  include /templates/goods/goods_card.pug
  .Product-info-wrapper
    ul.Product-info-nav
      li DESCRIPTION
      li.Product-info-active-tab
          | REVIEWS (
          span.Reviews-count= reviewsCount[0].count
          | )
      li SPECIFICATION
    ul.Product-info-content
      li.Product-description-wrapper.visually-hidden
        h4.New-user-review-header Product Description
        p.Product-description= goodMainInformation[0].product_description
      li.Product-info-content-reviews-wrapper
        include /templates/goods/goods_reviews.pug
        .New-user-review
          h4.New-user-review-header Add a review
          div(class="Add-review-wrapper")
            form.User-review-form(action='' method='POST')
              fieldset.New-user-review-rating-fieldset
                label.New-user-review-rating-caption Your Rating
                div(class="New-user-review-rating-group" tabindex="1")
                  input.Rating-star(type='radio' name='product-rating' value='1' aria-label='awful')
                  input.Rating-star(type='radio' name='product-rating' value='2' aria-label='bad')
                  input.Rating-star(type='radio' name='product-rating' value='3' aria-label='normal')
                  input.Rating-star(type='radio' name='product-rating' value='4' aria-label='good')
                  input.Rating-star(type='radio' name='product-rating' value='5' aria-label='exelent')
                  .Rating-focus
              form.User-review-form(action='' method='POST')
                label.Review-text-label(for='review-text-field')
                  | Your review
                  textarea#review-text-field.New-user-revier-text(name='review-text' rows='5')
                .User-info-wrapper
                  input.User-info-user-name(type='text' name="user-name-field" placeholder='Name*' pattern="[a-zA-z0-9]{3,}" title="Name at least with 3 symbols")
                  input.User-info-email(type='email' name="user-email-field" placeholder='Email*')
                  input.User-info-submit-btn(type='submit' value='POST')
      li(class="Goods-characteristics-table-wrappper visually-hidden")
        h4.New-user-review-header Product Characteristics
        table
          tr
            td(class="Characteristic-name") Brand
            td(class="Characteristic-value")= goodMainInformation[0].product_brand_value
          -for(let i=0;i<characteristicValues.length;i++){
          tr
            td(class="Characteristic-name")= characteristicValues[i].characteristic_name
            td(class="Characteristic-value")= characteristicValues[i].category_characteristic_value
          -}
          tr
            td(class="Characteristic-name") Length
            td(class="Characteristic-value")= goodMainInformation[0].product_length+" inches"    
          tr
            td(class="Characteristic-name") Width
            td(class="Characteristic-value")= goodMainInformation[0].product_width+" inches"
          tr
            td(class="Characteristic-name") Height
            td(class="Characteristic-value")= goodMainInformation[0].product_height+" inches"  
          tr
            td(class="Characteristic-name") Weight
            td(class="Characteristic-value")= goodMainInformation[0].product_weight+" lbs"                            
