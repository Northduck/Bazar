doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title=i18n.__("Your cart")
    link(rel='stylesheet' type='text/css' href='/css/MainStyle.css')
    link(href='https://fonts.googleapis.com/css?family=Poppins:300,400,500,600&display=swap' rel='stylesheet')
    link(rel='stylesheet' type='text/css' href='/css/all.min.css')
    link(rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/img/favicon/favicon-16x16.png")
    link(rel="manifest" href="/img/favicon/site.webmanifest")
    link(rel="mask-icon" href="/img/favicon/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
  body
    header.Header
      include /templates/top_header.pug
      include /templates/middle_header.pug
      include /templates/bottom_header.pug
    main.Cart-main
        section.Cart-section.Section-centerer
            h1.Cart-section-header=i18n.__("Your cart")
              span.Cart-quantity 
                =cartQuantity
                =i18n.__("items")
            .Cart-section-columns
                .Cart-product-wrapper
                  ul.Cart-products-column
                      include /templates/cart/cart_items.pug
                .Cart-order-information-column-wrapper
                  .Cart-order-information-column
                    h2.Cart-order-header=i18n.__("Your order")
                    .Cart-order-subtotal
                        ul.Cart-order-subtotal-row
                            li.Cart-order-subtotal-head
                                =i18n.__("Subtotal")
                                span.Cart-quantity 
                                  =cartQuantity
                                =i18n.__("Subtotalitems")
                            li.Cart-order-subtotal-price
                    .Cart-order-total
                        h3.Cart-order-total-header
                          =i18n.__("Est. total")
                        ul.Cart-order-total-row
                            li.Cart-order-total-head
                              =i18n.__("Total")
                            li.Cart-order-total-price
                    .Cart-button-wrapper
                      a(href="/checkout_goods" class="Check-out-button")=i18n.__("Check-Out")
        include /templates/newsletter_form.pug
    footer.Footer
      include /templates/footer_top.pug
      include /templates/footer_bottom.pug
    script(type="module" src="/js/cart_index.js")
    script(type="module" src="/js/common_script.js")