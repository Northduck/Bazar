doctype html
html(lang=i18n.locale)
  head
    meta(charset="utf-8")
    title=i18n.__("Your account")
    link(rel='stylesheet' type='text/css' href='../css/MainStyle.css')
    link(href='https://fonts.googleapis.com/css?family=Poppins:300,400,500,600&display=swap' rel='stylesheet')
    link(rel='stylesheet' type='text/css' href='../css/all.min.css')
    link(rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/img/favicon/favicon-16x16.png")
    link(rel="manifest" href="/img/favicon/site.webmanifest")
    link(rel="mask-icon" href="/img/favicon/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
  body
    header.Header
      include /templates/top_header.pug
      include /templates/middle_header.pug
      include /templates/bottom_header.pug
    main.Login-main
        div(class="Account-wrappper Section-centerer")
            h1.Account-header=i18n.__("Your account")
            .Account-container
              .Account-nav-wrapper
                -let accountNav=i18n.__("account nav buttons")
                ul.Account-nav
                    li.Account-nav-orders.Current-account-tab
                      button=accountNav["My orders"]
                    li.Account-nav-reviews
                      button=accountNav["My reviews"]
                    li.Account-nav-profive
                      button=accountNav["My profive"]
                    li.Account-nav-preferences
                      button=accountNav["Preferences"]
              .Account-content-wrapper
                ul.Account-content
                  li.Account-content-orders
                    -let accountOrders=i18n.__("account orders buttons")
                    ul.Account-orders-type-nav
                      li.Account-orders-type-el.Current-account-tab
                        button.Account-orders-type-products=accountOrders["Products"]
                      li.Account-orders-type-el
                        button.Account-orders-type-services=accountOrders["Services"]
                    .Account-orders-type-content
                      include /templates/account/account_orders.pug
                  li.Account-content-reviews.visually-hidden
                  li.Account-content-profive.visually-hidden
                  li.Account-content-preferences.visually-hidden
    footer.Footer
      include /templates/footer_top.pug
      include /templates/footer_bottom.pug
    script(src="/js/account_index.js")
    script(type="module" src="/js/common_script.js")
